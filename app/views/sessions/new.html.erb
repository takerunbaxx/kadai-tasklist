<h1>Log in</h1>

<%=form_with(url: login_path, scope: :session, local: true) do |f|%>

<%=f.label :email, "REGISTERED EMAIL" %>
<%=f.email_field :email%>
<h2>---------------------------------------------------------</h2>
<%=f.label :password, "YOUR PASSWORD"%>
<%=f.password_field :password%>

<%=f.submit "LOGIN"%>

<p>IS THIS FIRST TIME TO VISIT? <%= link_to 'Sign up now!', new_user_path %></p>

<%end%>